{
    "manifest_version": 2,
    "name": "Contact Finder",
    "description": "Autocomplete a list of contacts when sending a message by searching their name in the address book.",
    "version": "1.0",
    "author": "Mathieu Degrange",
    "applications": {
        "gecko": {
            "id": "ContactFinder@DegrangeM.addons.thunderbird.net",
            "strict_min_version": "78.0",
            "strict_max_version": "99.0"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "compose_action": {
        "default_title": "Contact Finder",
        "default_icon": "icon-32.png"
    },
    "icons": {
        "64": "icon-64.png",
        "32": "icon-32.png",
        "16": "icon-16.png"
    },
    "permissions": [
        "compose",
        "addressBooks"
    ]
}